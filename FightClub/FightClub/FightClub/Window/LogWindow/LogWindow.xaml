<Window x:Class="FightClub.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FightClub"
        mc:Ignorable="d"
        Title="LogWindow" Height="400" Width="400" MinWidth="400" MinHeight="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="ClearButton" BorderBrush="{DynamicResource fadeColor}" Background="{DynamicResource lightColor}" FontSize="18">
            <Image Source="{DynamicResource ClearImage}"></Image>
        </Button>
        <ListBox x:Name="LogBox" Foreground="{DynamicResource defaultTextColor}" Background="{DynamicResource darkColor}" Grid.Column="1" FontSize="15">
            <ListBoxItem>Running...</ListBoxItem>
        </ListBox>
    </Grid>
</Window>
