<Window x:Class="FightClub.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FightClub"
        mc:Ignorable="d"
        Title="LogWindow" Height="200" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button BorderBrush="{DynamicResource fadeColor}" Background="{DynamicResource lightColor}" x:Name="ButtonClear" FontSize="18">
            <Image Source="{DynamicResource ClearImage}"></Image>
        </Button>
        <ListBox Foreground="{DynamicResource defaultTextColor}" Background="{DynamicResource darkColor}" x:Name="ListBoxLog" Grid.Column="1" FontSize="22">
            <ListBoxItem>Hello my name is human</ListBoxItem>
        </ListBox>
    </Grid>
</Window>
